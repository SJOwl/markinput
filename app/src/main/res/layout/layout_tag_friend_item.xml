<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_xxxlarge">

    <ImageView
        android:id="@+id/profileAvatar"
        android:layout_width="@dimen/size_avatar"
        android:layout_height="@dimen/size_avatar"
        android:layout_marginStart="@dimen/size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/size_medium"
        android:layout_marginStart="@dimen/size_medium"
        android:ellipsize="end"
        android:gravity="start|top"
        android:maxLines="2"
        android:text="John Doe"
        app:layout_constraintBottom_toBottomOf="@id/profileAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/profileAvatar"
        app:layout_constraintTop_toTopOf="@id/profileAvatar" />

</android.support.constraint.ConstraintLayout>